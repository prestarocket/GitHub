<?xml version="1.0" encoding="UTF-8" ?>

<themeeditor>
	<version value="1.4">
	<ccc available="true" />
	<guest_checkout available="true" />
	<one_page_checkout available="true" />
	<store_locator available="true" />
	</version>
	<author>prestabrain</author>
<name>Live Theme Editor</name>	
<selectors>
		<items>
			<header>Body Content</header>
			<match>body</match>
			
 			<item>
				<type>text</type>
				<label>Background Color</label>
				<selector>body,body .block-img,body .fbox-content</selector>
				<attrs>background-color</attrs>
			</item>

			<item>
				<type>image</type>
				<label>Background Image</label>
				<selector>body,body .block-img,body .fbox-content</selector>
				<attrs>background-image</attrs>
			</item>

			<item>
				<type>text</type>
				<label>Background Content</label>
				<selector>body,body .block-img,body .fbox-content</selector>
				<attrs>background-color</attrs>
			</item> 

			<item>
				<type>fontfamily</type>
				<label>Font Family</label>
				<selector>body #page</selector>
				<attrs>font-family</attrs>
			</item> 

		 	<item>
				<type>fontsize</type>
				<label>Font-Size</label>
				<selector>body #page</selector>
				<attrs>font-size</attrs>
			</item> 

			<item>
				<type>text</type>
				<label>Color Text</label>
				<selector>body #page span</selector>
				<attrs>color</attrs>
			</item> 

			<item>
				<type>text</type>
				<label>Link Color</label>
				<selector>body #page a</selector>
				<attrs>color</attrs>
			</item> 

			<item>
				<type>text</type>
				<label>Link Hover Color</label>
				<selector>body #page a:hover</selector>
				<attrs>color</attrs>
			</item> 
		</items>

 <items>
		<header>Header</header>
		<match>Header</match>
		<item>
			<type>text</type>
			<label>Background Color</label>
			<selector>#header-main,.header-default #header-main</selector>
			<attrs>background-color</attrs>
		</item>

		<item>
			<type>image</type>
			<label>Background Image</label>
			<selector>#header-main</selector>
			<attrs>background-image</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Text Color</label>
			<selector>#header-main a,span</selector>
			<attrs>color</attrs>
		</item>

	</items>




	<items>
		<header>MainMenu</header>
		<item>
			<type>text</type>
			<label>Background Color</label>
			<selector>#pts-mainnav</selector>
			<attrs>background-color</attrs>
		</item> 

		<item>
			<type>image</type>
			<label>Background Image</label>
			<selector>#pts-mainnav</selector>
			<attrs>background-image</attrs>
		</item>
	 	<item>
			<type>text</type>
			<label>Color Link</label>
			<selector>#pts-mainnav a,#pts-mainnav span</selector>
			<attrs>color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Color Link Hover</label>
			<selector>#pts-mainnav a:hover,#pts-mainnav span:hover </selector>
			<attrs>color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Background Sub Menu</label>
			<selector>.pts-megamenu .dropdown-menu</selector>
			<attrs>background-color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>text submenu</label>
			<selector>.pts-megamenu a,.pts-megamenu span</selector>
			<attrs>color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Link submenu</label>
			<selector>.pts-megamenu .dropdown-menu ul li a,.pts-megamenu li span</selector>
			<attrs>color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Link Hover submenu</label>
			<selector>.pts-megamenu .dropdown-menu ul li a:hover</selector>
			<attrs>color</attrs>
		</item>
	</items>	
	<items>
		<header>Footer Top</header>
		<match>footer-top</match>
			<item>
				<type>text</type>
				<label>Background Color</label>
				<selector>.footer-top, .pts-footer-top </selector>
				<attrs>background-color</attrs>
			</item> 
			<item>
				<type>text</type>
				<label>Color Text</label>
				<selector>.footer-top .widget-heading,.footer-top .btn</selector>
				<attrs>color</attrs>
			</item> 

			<item>
				<type>text</type>
				<label>Color Link</label>
				<selector>.footer-top .btn </selector>
				<attrs>color</attrs>
			</item> 
			<item>
				<type>text</type>
				<label>Color Link Hover</label>
				<selector>.footer-top .btn:hover</selector>
				<attrs>color</attrs>
			</item> 
			
			<item>
				<type>text</type>
				<label>Heading Color</label>
				<selector>.footer-top .title_block</selector>
				<attrs>color</attrs>
			</item> 
			<item>
				<type>image</type>
				<label>Background Image</label>
				<selector>.footer-top </selector>
				<attrs>background-image</attrs>
			</item>
	</items>	

    <items>
		<header>Footer Center</header>
		<match>footercenter</match>
			<item>
				<type>text</type>
				<label>Background Color</label>
				<selector>.footer-center</selector>
				<attrs>background-color</attrs>
			</item>
			<item>
				<type>text</type>
				<label>Color Text</label>
				<selector>.footer-center .title_block,.footer-center a</selector>
				<attrs>color</attrs>
			</item>
			<item>
				<type>image</type>
				<label>Background Image</label>
				<selector>.footer-center</selector>
				<attrs>background-image</attrs>
			</item>
	</items>

	<items>
		<header>Footer bottom</header>
		<match>footerbottom</match>
			<item>
				<type>text</type>
				<label>Background Color</label>
				<selector>.footer-bottom</selector>
				<attrs>background-color</attrs>
			</item>
			<item>
				<type>text</type>
				<label>Color Text</label>
				<selector>.footer-bottom .widget-heading</selector>
				<attrs>color</attrs>
			</item>
			<item>
				<type>image</type>
				<label>Background Image</label>
				<selector>.footer-bottom</selector>
				<attrs>background-image</attrs>
			</item>
	</items>	
	<items>
		<header>Powered</header>
		<match>powered</match>
		<item>
			<type>text</type>
			<label>Background Color</label>
			<selector>.powered</selector>
			<attrs>background-color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Color Text</label>
			<selector>.powered a,.powered span,.powered p</selector>
			<attrs>color</attrs>
		</item> 

	 	<item>
			<type>text</type>
			<label>Color Link</label>
			<selector>.powered a</selector>
			<attrs>color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Color Link Hover</label>
			<selector>.powered a:hover</selector>
			<attrs>color</attrs>
		</item> 
		<item>
			<type>image</type>
			<label>Background Image</label>
			<selector>.powered</selector>
			<attrs>background-image</attrs>
		</item> 

	</items>
</selectors>

<elements>
	<items>
		<header>Products</header>
		<match>product</match>

		<item>
			<type>text</type>
			<label>Bg Product</label>
			<selector>.product-block</selector>
			<attrs>background-color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Text Product</label>
			<selector>.product-name,.addtocart span</selector>
			<attrs>color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Text Link</label>
			<selector>.product-block a,.addtocart span</selector>
			<attrs>color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Text Link Hover</label>
			<selector>.product-block a:hover</selector>
			<attrs>color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Color Price</label>
			<selector>.price .product-price</selector>
			<attrs>color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Color Price New</label>
			<selector>.price .product-price.new-price</selector>
			<attrs>color</attrs>
		</item>
 		<item>
			<type>text</type>
			<label>Color Price Old</label>
			<selector>.price .old-price</selector>
			<attrs>color</attrs>
		</item> 
		
	</items>
	

	<items>
		<header>Modules Default in Sidebar</header>
		<match>modules</match>
			<item>
				<type>text</type>
				<label>Heading Background</label>
				<selector>.sidebar .block .title_block</selector>
				<attrs>background-color</attrs>
			</item> 
			<item>
				<type>text</type>
				<label>Heading Color</label>
				<selector>.sidebar .block .title_block</selector>
				<attrs>color</attrs>
			</item>
			<item>
				<type>text</type>
				<label>Heading Border Color</label>
				<selector>.sidebar .block .title_block</selector>
				<attrs>border-color</attrs>
			</item>  
			<item>
				<type>text</type>
				<label>Content Background</label>
				<selector>.sidebar .block .block_content</selector>
				<attrs>background-color</attrs>
			</item>   
			<item>
				<type>text</type>
				<label>Content border</label>
				<selector>.sidebar .block .block_content</selector>
				<attrs>border-color</attrs>
			</item>  
			<item>
				<type>text</type>
				<label>Link Color</label>
				<selector>.sidebar .product-block</selector>
				<attrs>color</attrs>
			</item>
			<item>
				<type>text</type>
				<label>Link Color</label>
				<selector>.sidebar .product-block .name a, .sidebar .block a</selector>
				<attrs>color</attrs>
			</item> 
			<item>
				<type>text</type>
				<label>Link Hover Color</label>
				<selector>.sidebar .product-block .name a:hover, .sidebar .block a:hover</selector>
				<attrs>color</attrs>
			</item> 
			<item>
				<type>text</type>
				<label>Color Price New</label>
				<selector>.sidebar .product-block .price</selector>
				<attrs>color</attrs>
			</item> 
 		
	 		<item>
				<type>text</type>
				<label>Color Price Old</label>
				<selector>.sidebar .product-block .price-old</selector>
				<attrs>color</attrs>
			</item>
	</items>

</elements>
</themeeditor>
